@model IEnumerable<Vidya.Models.Video>
@{
    ViewBag.Title = "Videos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Videos</h2>
<div>
    @Html.ActionLink("Create New", "NewVideo", "Video", new { @class = "btn btn-success" })
</div>
<br />
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Video</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var video in Model)
    {
        <tr>
            <td>@Html.ActionLink(video.Name, "EditVideo", "Video", new {id = video.Id}, null)</td>
            <td>@video.Genre.Name</td>
        </tr>
    }
    </tbody>
</table>
